{% assign products_per_page = section.settings.products_per_page %}
{% paginate search.results by section.settings.products_per_page %}
<section class="section-padding-product-collection">
  <div class="container">
    <div class="bc-sf-search-container">
      <h1 class="bc-sf-search-result-header"></h1>
      <form class="bc-sf-search-form" action="/search" method="get" role="search">
        <input class="bc-sf-search-box" type="search" name="q" value="{{ search.terms | escape }}">
        <button type="submit" class="bc-sf-search-btn"></button>
      </form>
      <p class="bc-sf-search-result-number"></p>
    </div>
    {% comment %} TOOLBAR {% endcomment %}
    <div id="bc-sf-filter-default-toolbar" style="display:none !important;">
        <div class="bc-sf-filter-default-toolbar-inner">
          <div class="bc-sf-filter-toolbar-item bc-sf-filter-toolbar-count">
            <span id="bc-sf-filter-total-product">{% include 'bc-sf-filter-skeleton', width: 1 %}</span>
          </div>
          <div class="bc-sf-filter-toolbar-item text-right bc-sf-filter-custom-sorting" id="bc-sf-filter-top-sorting">{% include 'bc-sf-filter-skeleton', width: 1 %}</div>
        </div>
    </div>
    {% comment %} END TOOLBAR {% endcomment %}
    <div id="bc-sf-filter-wrapper" class="flex justify-between md:flex-wrap">
      <div id="bc-sf-filter-tree-mobile">{% include 'bc-sf-filter-skeleton', type: 'button' %}</div>
      <div id="bc-sf-filter-top-sorting-mobile" class="bc-sf-filter-custom-sorting">{% include 'bc-sf-filter-skeleton', type: 'button' %}</div>
      <div class="w-1/5 pr-4 min-w-300 md:w-full lg:pr-0 filter-container">
        <div id="bc-sf-filter-tree">{% include 'bc-sf-filter-tree-placeholder' %}</div>
      </div>
      <div class="w-4/5 pl-4 md:w-full lg:pl-0 md:mb-12">
        <div id="bc-sf-filter-products" data-bc-sort="{{ collection.default_sort_by }}" class="flex flex-wrap justify-start mb-6 md:justify-center">
          {% for result in search.results %}
            {% if result.object_type == 'product' %}
                {% comment %}{% include 'bc-sf-filter-product-item', product: result %}{% endcomment %}
                <div class="collection-page-product-wrapper">
                  {% include 'product-card', product: result, collection: result.collections | first %}
                </div>
            {% endif %}
          {% endfor %}
        </div>
        <div id="bc-sf-filter-bottom-pagination" class="bc-sf-filter-bottom-pagination-default">
          {% if paginate.pages > 1 %}
            {% include 'bc-sf-filter-pagination' %}
          {% endif %}
        </div>
        <div id="bc-sf-filter-load-more"></div>
      </div>
    </div>
  </div>
</section>

{% endpaginate %}
