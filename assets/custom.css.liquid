    letter-spacing: .1em;
}

/*GDPR app*/

.eg-cc-bottom {
    max-width: 60%;
    margin: auto;
}

@media only screen and (max-width: 900px){
.eg-cc-bottom {
    margin: 0;
 	bottom: 5em !important;
    display: block;
} 
.eg-cc-compliance{
  	display: block !important;
}
}


@media only screen and (max-width: 375px){
.eg-cc-bottom {
    max-width: 100%;  
}
}

