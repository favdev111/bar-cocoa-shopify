// FONT
@font-face {
  font-family: 'bc-sf-filter-ico';
  src:  url('bc-sf-filter-ico.eot?1fx0d6');
  src:  url('bc-sf-filter-ico.eot?1fx0d6#iefix') format('embedded-opentype'),
    url('bc-sf-filter-ico.ttf?1fx0d6') format('truetype'),
    url('bc-sf-filter-ico.woff?1fx0d6') format('woff'),
    url('bc-sf-filter-ico.svg?1fx0d6#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
}
@mixin icobcfont {
  /* use !important to prevent issues with browser extensions that change fonts */
  font-family: 'bc-sf-filter-ico' !important;
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
/* Color */
$color-qv-bg: rgba(255,255,255,1);
$color-qv-bg-hover: rgba(61,66,70,1);
$color-qv-bd: rgba(255,255,255,1);
$color-qv-bd-hover: rgba(61,66,70,1);
$color-qv-text: rgba(61,66,70,1);
$color-qv-text-hover: rgba(255,255,255,1);
$color-atc-bg: rgba(34,34,34,0.9);
$color-atc-bg-hover: rgba(61,66,70,1);
$color-atc-bd: rgba(34,34,34,0.9);
$color-atc-bd-hover: rgba(61,66,70,1);
$color-atc-text: rgba(255,255,255,1);
$color-atc-text-hover: rgba(255,255,255,1);
$position-right: 0px;
$size-height: 34px;
$size-line-height: $size-height - 2px;
.bc-quickview-btn {
  background: $color-qv-bg;
  color: $color-qv-text;
  border: 1px solid $color-qv-bd;
  &:hover {
    background: $color-qv-bg-hover;
    color: $color-qv-text-hover;
    border-color: $color-qv-bd-hover;
  }
}
.bc-addtocart-btn {
  background: $color-atc-bg;
  color: $color-atc-text;
  border: 1px solid $color-atc-bd;
  &:hover {
    background: $color-atc-bg-hover;
    color: $color-atc-text-hover;
    border-color: $color-atc-bd-hover;
  }
}
/* ==================================== */
.bc-quickview-btn-wrapper,
.bc-addtocart-product-form {
  display: inline-block;
  vertical-align: top;
  cursor: pointer;
  margin:0;
}
.bc-addtocart-btn,
.bc-quickview-btn {
  -webkit-transition: all 0.3s ease-in-out;
  -moz-transition: all 0.3s ease-in-out;
  -ms-transition: all 0.3s ease-in-out;
  -o-transition: all 0.3s ease-in-out;
  transition: all 0.3s ease-in-out;
  display: inline-block;
  white-space: nowrap;
   &:focus {
    outline:none;
  }
}
@media screen and (min-width: 1200px) {
  .bc-al-exist {
    .bc-al-overlay:before {
      content:"";
      background-color: transparent;
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      bottom: 0;
      left:0;
      right: 0;
      z-index: 2;
      -webkit-transition: all 0.2s ease-in-out;
      -moz-transition: all 0.2s ease-in-out;
      -ms-transition: all 0.2s ease-in-out;
      -o-transition: all 0.2s ease-in-out;
      transition: all 0.2s ease-in-out;
    }
  }
}
// STYLE
@media screen and (min-width: 1200px) {
  .bc-al-style-cirle {
    &.bc-qv-only-icon {
      .bc-quickview-btn{
        -webkit-border-radius:100%;
        -moz-border-radius: 100%;
        border-radius: 100%;
      }
    }
    &.bc-atc-only-icon {
      .bc-addtocart-btn{
        -webkit-border-radius:100%;
        -moz-border-radius: 100%;
        border-radius: 100%;
      }
    }
  }
}
// RESPONSIVE ==============================
@media screen and (min-width: 1200px) {
  .bc-al-exist {
    position: relative;
    overflow: hidden;
    .bc-action-list-wrapper {
      position: absolute;
      z-index: 9;
    }
  }
}
// Tablet
@media (max-width: 1199px) {
  .bc-quickview-btn-wrapper {
    display: none !important;
  }
  .bc-al-exist {
    padding-bottom: 30px;
    margin-bottom: 0 !important;
    .bc-action-list-wrapper {
      width: 100% !important;
      padding-top: 5px;
    }
    .bc-addtocart-product-form {
      display: block;
    }
    .bc-addtocart-btn {
      width: 100%;
      border: 2px solid #3d4246 !important;
      background: none !important;
      padding: 0 5px;
      line-height: 30px;
      color: #3d4246 !important;
      font-weight: 400;
      &:hover {
        background: #3d4246 !important;
        color: #fff !important;
      }
      @media (max-width: 320px) {
        font-size: 14px;
      }
    }
  }
  .bc-al-exist {
    script {
      + div,
      + a {
        margin-bottom: 5px;
        padding-bottom: 0;
      }
    }
  }
}

@media (min-width: 768px) and (max-width: 1199px) {
  .bc-al-exist {
    .bc-addtocart-btn {
      letter-spacing: -0.14em;
    }
  }
}
.bc-al-exist .bc-addtocart-btn.bc-addtocart-sold-out {
  cursor: default;
  border-color: #bebebe !important;
  background-color:#bebebe !important;
  color: #fff !important;
}
.bc-atc-icon-text .bc-al-exist .bc-addtocart-btn.bc-addtocart-sold-out span:before {
  content: "" !important;
}
// ACTION LIB ===========================
.bc-action-list-wrapper {
  @media screen and (min-width: 1200px) {
    filter: alpha(opacity=0); // IE 5-7
    opacity: 0;
    -webkit-transition: all 0.3s ease-in-out;
    -moz-transition: all 0.3s ease-in-out;
    -ms-transition: all 0.3s ease-in-out;
    -o-transition: all 0.3s ease-in-out;
    transition: all 0.3s ease-in-out;
  }
}
.bc-al-exist {
  &:hover {
    .bc-action-list-wrapper {
      filter: alpha(opacity=100); // IE 5-7
      opacity: 1;
    }
  }
}
// BUTTON QUICKVIEW - ICON TEXT
.bc-qv-icon-text {
  @media screen and (min-width: 1200px) {
    .bc-quickview-btn {
      height: $size-height;
      line-height: $size-line-height;
      padding: 0 10px;
      display: inline-block;
      text-transform: uppercase;
      span {
        display: block;
        width: 100%;
        height: 100%;
        font-size: 12px;
        text-align: center;
        &:before {
          display: inline-block;
          @include icobcfont;
          content: "\e910";
          font-size: 16px;
          line-height: $size-line-height;
          font-weight: 300;
          margin-right: 10px;
          vertical-align: top;
        }
      }
    }
  }
}
// BUTTON CART - ICON TEXT
.bc-atc-icon-text {
  @media screen and (min-width: 1200px) {
    .bc-addtocart-btn {
      height: $size-height;
      line-height: $size-line-height;
      padding: 0;
      display: inline-block;
      text-transform: uppercase;
      span {
        display: block;
        width: 100%;
        height: 100%;
        font-size: 12px;
        text-align: center;
        &:before {
          display: inline-block;
          @include icobcfont;
          content: "\e911";
          font-size: 14px;
          line-height: $size-line-height;
          font-weight: 600;
          vertical-align: top;
          margin-right: 10px;
        }
      }
    }
  }
}
// BUTTON QUICKVIEW - ONLY ICON
