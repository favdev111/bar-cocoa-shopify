// POSITION ============================================
// STYPE 1 - Bottom - Vertical - Right
@media screen and (min-width: 1200px) {
  .bc-al-bottom-v {
    &.bc-qv-only-icon {
      .bc-quickview-btn,
      .bc-addtocart-btn {
        width: 40px;
        height: 40px;
        span:before {
          line-height: 38px;
        }
      }
    }
    .bc-action-list-wrapper {
      right: $position-right;;
      left: auto !important;
      margin-top: -10px;
      .bc-quickview-btn-wrapper,
      .bc-addtocart-product-form{
        margin-top: 5px;
        display: block;
      }
      .bc-quickview-btn {
      }
      left: auto !important;
      right: $position-right;
      text-align: right;
      padding-right: 10px;
    }
    .bc-al-exist:hover .bc-al-overlay:before {
      background-color: rgba(0,0,0,0.15);;
    }
  }
}
// STYLE 2 - Bottom - horizontal - right
@media screen and (min-width: 1200px) {
  .bc-al-bottom-h {
    &.bc-al-only-icon {
      .bc-quickview-btn,
      .bc-addtocart-btn {
        width: 45px;
        height: 45px;
        span:before {
          line-height: 43px;
        }
      }
      .bc-quickview-btn-wrapper {
        text-align: right;
        + .bc-addtocart-product-form {
          .bc-addtocart-btn {
            border-left: none;
          }
        }
      }
      .bc-action-list-wrapper {
        left: auto !important;
        right: $position-right;
        text-align: right;
      }
    }
    .bc-al-exist:hover .bc-al-overlay:before {
      background-color: rgba(0,0,0,0.15);;
    }
  }
}
// STYPE 3 - Bottom - Horizontal - full
@media screen and (min-width: 1200px) {
  .bc-al-bottom-h-full {
    &.bc-al-only-icon {
      .bc-action-list-wrapper {
        right: 0;
        width: 100%;
        &:before {
          content: "";
          position: absolute;
          left: 50%;
          top: 5px;
          background-color: $color-atc-bg;
          width: 1px;
          height: 30px;
          -webkit-transition: all 0.3s ease-in-out;
          -moz-transition: all 0.3s ease-in-out;
          -ms-transition: all 0.3s ease-in-out;
          -o-transition: all 0.3s ease-in-out;
          transition: all 0.3s ease-in-out;
        }
        &:hover:before {
          background-color: transparent;
        }
        .bc-quickview-btn-wrapper {
          border-right: none;
        }
        .bc-quickview-btn-wrapper,
        .bc-addtocart-product-form {
          width: 50%;
          display: block;
          float: left;
          box-sizing: content-box;
        }
      }
      .bc-quickview-btn,
      .bc-addtocart-btn {
        width: 100%;
        height: 40px;
        display: block;
        span:before {
          line-height: 38px;
        }
        border: none;
      }
      /* One Button */
      &.bc-al-only-one-component {
        .bc-action-list-wrapper {
          &:before {
            display: none;
          }
          .bc-addtocart-product-form,
          .bc-quickview-btn-wrapper {
            width: 100%;
          }
        }
      }
    }
  }
}
// STYLE 4: BOTTOM FULL - ICON - TEXT
@media screen and (min-width: 1200px) {
  .bc-al-icon-text {
    &.bc-al-bottom-h-full {
      .bc-action-list-wrapper {
        padding-left: $position-right;
        padding-right: $position-right;
        .bc-addtocart-btn {
          @media screen and (max-width: 1199px) {
            padding-left: 5px;
            padding-right: 5px;
          }
        }
        text-align: center;
      }
      .bc-addtocart-product-form {
        width: calc(100% - #{$size-height + $position-right + $position-right});
        display: block;
        float: left;
        .bc-addtocart-btn {
          width: 100%;
        }
      }
      .bc-quickview-btn-wrapper {float: left;}
      /*One button */
      &.bc-al-only-one-component {
        .bc-addtocart-product-form {
          width: calc(100% - #{$position-right + $position-right});
        }
        .bc-quickview-btn,
        .bc-quickview-btn-wrapper{
          width: 100%;
        }
      }
    }
  }
}
// STYLE 5 - STYLE 6 - POSITION MIDDLE ===
@media screen and (min-width: 1200px) {
  .bc-al-middle {
    .bc-action-list-wrapper {
      text-align: center;
    }
    &.bc-qv-icon-text {
      .bc-quickview-btn-wrapper {
        margin-bottom: 10px;
        display: block;
        .bc-quickview-btn {
          display: inline-block;
        }
      }
    }
    &.bc-al-only-icon {
      .bc-quickview-btn-wrapper {
        margin-right: 5px;
      }
      .bc-addtocart-btn,
      .bc-quickview-btn {
        width: 40px;
        height: 40px;
        span:before {
          line-height: 38px;
        }
      }
    }
    &.bc-qv-only-icon.bc-atc-icon-text {
      .bc-quickview-btn-wrapper {
        display: block;
        width: 100%;
        text-align: center;
        margin-bottom: 10px;
      }
    }
    &.bc-al-only-text {
      .bc-quickview-btn-wrapper + .bc-addtocart-product-form {
        margin-top: 10px;
      }
    }
    .bc-al-exist:hover .bc-al-overlay:before {
      background-color: rgba(0,0,0,0.15);;
    }
  }
}
// EFFECT ===================
.bc-al-effect-transition-bottom {
  @media screen and (min-width: 1200px) {
    .bc-al-exist {
      .bc-action-list-wrapper {
        -webkit-transition: transform 0.4s ease-out;
        -moz-transition: transform 0.4s ease-out;
        -ms-transition: transform 0.4s ease-out;
        -o-transition: transform 0.4s ease-out;
        transition: transform 0.4s ease-out;
        -webkit-transform: translate(0px, 10px);
        transform: translate(0px, 10px);
      }
      &:hover {
        .bc-action-list-wrapper {
          -webkit-transform: translate(0px, 0);
          transform: translate(0px, 0);
        }
      }
    }
  }
}
.bc-al-effect-transition-right {
  @media screen and (min-width: 1200px) {
    .bc-action-list-wrapper {
      -webkit-transition: right 0.3s ease-out ;
      -moz-transition: right 0.3s ease-out ;
      -ms-transition: right 0.3s ease-out ;
      -o-transition: right 0.3s ease-out ;
      transition: right 0.3s ease-out ;
      right: $position-right - 20px !important;
    }
    .bc-al-exist {
      &:hover {
        .bc-action-list-wrapper {
          right: $position-right !important;
        }
      }
    }
  }
}
/* Quickview */
$color-qv-btn-text: #fff;
$color-qv-btn-bg: #000;
$color-qv-btn-border: #000;
#bc-quickview-popup-wrapper {
  display:none;
  &.bc-quickview-popup-active {
    bottom: 0;
    left: 0;
    outline: 0 none;
    overflow-x: auto;
    overflow-y: scroll;
    position: fixed;
    right: 0;
    top: 0;
    z-index: 1050;
    display: block;
  }
}
.bc-quickview-overlay {
  background: rgba(45, 45, 50, 0.8);
  height: 100%;
  width: 100%;
  position: fixed;
}

.bc-quickview-wrapper {
  position: relative;
  width: 90%;
  margin: 50px auto 30px;
  background: #fff;
  padding: 50px 50px 60px;
  max-width: 900px;
  /* Basic Version */
  &.bc-al-basic-version{
    .bc-quickview-notify-me-form-wrapper{
      display:none !important;
    }
  }
  /* Advanced Version */
  &.bc-al-advanced-version {
    /* Notify Form */
    #bc-quickview-notify-me-form-wrapper {
      float: left;
      margin-top: 30px;

      #bc-quickview-notify-me-customer-info{
        display: -webkit-box;      /* OLD - iOS 6-, Safari 3.1-6 */
        display: -moz-box;         /* OLD - Firefox 19- (buggy but mostly works) */
        display: -ms-flexbox;      /* TWEENER - IE 10 */
        display: -webkit-flex;     /* NEW - Chrome */
        display: flex;

        .bc-quickview-notify-me-info-left{
          width: 50%;
          padding-right: 5px;

          input {
            padding: 7px 10px 7px 10px;
            border: 1px solid #e7e7e7;
            margin: 0;
            width: 100%;
            background-color: #fff;
            color: #555;
            min-height: 0;
          }
        }
        .bc-quickview-notify-me-info-right{
          width: 50%;
          padding-left: 5px;
          .bc-quickview-send-message-btn{
            padding: 7px 20px;
            background: $color-qv-btn-bg;
            border: 1px solid $color-qv-btn-border;
            color: $color-qv-btn-text;
            cursor: pointer;
            border-radius: 0;
            line-height: 1.2;
            width: 100%;
            -webkit-transition: all 0.3s ease-in-out;
            -moz-transition: all 0.3s ease-in-out;
            -ms-transition: all 0.3s ease-in-out;
            -o-transition: all 0.3s ease-in-out;
            transition: all 0.3s ease-in-out;
            min-height: 0;

            span{
              color: $color-qv-btn-text;
            }
          }
        }

      }

      .bc-quickview-notify-form{
        margin-top: 8px;
      }
    }

    /* Qty Left */
    .bc-quickview-inventory-quantity {
      margin-bottom: 8px;
    }

    /* Social Block */
    .bc-quickview-social-listing{
      margin-top: 30px;
      clear: both;
      border: 1px solid #e3e3e3;
      border-width: 1px 0;
      overflow: hidden;
      padding: 8px 0px 6px 0px;
      line-height: 28px;
      display: inline-block;
      width: 100%;
      .bc-quickview-social-item-label{
        float: left;
      }
      ul{
        float: right;
        li{
          &.bc-quickview-social-item{
            overflow: hidden;
            color: #fff;
            display: inline-block;
          *display: inline;
          *zoom: 1;
          padding: 0;
          line-height: 0;
          text-decoration: none;
          text-transform: none;
          cursor: pointer;
          transition: all .2s ease-in-out;
          border: 0;
          background-color: transparent;
          }
        }
      }

    }

  }
}
.bc-quickview-popup-icon-close {
  &:after {
    content: "\e90d";
    @include icobcfont;
    position: absolute;
    top: 10px;
    right: 10px;
    width: 30px;
    height: 30px;
    line-height: 30px;
    color: #000;
    font-weight: 700;
    font-size: 18px;
    text-align: center;
    border-radius: 50%;
    border-width: 0;
    background-color: transparent;
    transition: background-color .25s;
    box-sizing: border-box;
    z-index: 2;
    cursor: pointer;
    -webkit-transition: all 0.3s ease-in-out;
    -moz-transition: all 0.3s ease-in-out;
    -ms-transition: all 0.3s ease-in-out;
    -o-transition: all 0.3s ease-in-out;
    transition: all 0.3s ease-in-out;
  }
  &:hover:after{
    filter: alpha(opacity=60); // IE 5-7
    opacity: 0.6;
  }
}
