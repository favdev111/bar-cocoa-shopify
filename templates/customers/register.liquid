<!-- REGISTRATION FORM -->
<section class="section-padding min-h-screen">
  <div class="container">
    <div class="text-center p-4">
      <h1 class="font-medium mb-6">Create An Account</h1>
    </div>
    {% form 'create_customer' %} {{ form.errors | default_errors }}
        <label for="first_name">First Name</label>
        <input type="text" value="" name="customer[first_name]" size="30" class="login-input w-full" required/>

        <label for="last_name">Last Name</label>
        <input type="text" value="" name="customer[last_name]" size="30" class="login-input w-full" required/>

        <label for="email">Email Address</label>
        <input type="email" value="" name="customer[email]" size="30" class="login-input w-full" required/>

        <label for="password">Password</label>
        <input type="password" value="" name="customer[password]" size="30" class="login-input w-full" required/>

        <button type="submit" class="button-alt">Create</button>
    {% endform %}
  </div>
</section>
