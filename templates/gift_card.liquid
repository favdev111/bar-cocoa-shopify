{% layout none %}
<!doctype html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="format-detection" content="telephone=no">
  {{ 'vendor/qrcode.js' | shopify_asset_url | script_tag }}
  {{ 'tailwind.css' | asset_url | stylesheet_tag }}
  {{ 'styles.css' | asset_url | stylesheet_tag }}
  {{ 'main.css' | asset_url | stylesheet_tag }}
  {{ 'vendor.js' | asset_url | script_tag }}
  {{ 'ui-ajax.js' | asset_url | script_tag }}
</head>
<body>
  {% section 'header' %}

  <section class="section-padding">
    <div class="container-small flex flex-col items-center">
      <h2 class="mb-6">You have a gift card!</h2>
      {% comment %}
      <div class="mb-6" id="qr-code"></div>
      <script>
        new QRCode(document.getElementById("qr-code"), {
          text: "{{ gift_card.qr_identifier }}",
          width: 240,
          height: 240
        });
      </script>
      {% endcomment %}
      <div class="mb-6 flex flex-col items-center text-center text-lg">
        <p class="font-bold">Your Gift Card Code:</p>
        <p>{{ gift_card.code }}</p>
        <a href="/collections/all" class="button">Shop Now</a>
      </div>
      <div class="mb-6">
        {% if gift_card.pass_url %}
        <a href="{{ gift_card.pass_url }}">
          <img id="apple-wallet-badge" src="{{ 'gift-card/add-to-apple-wallet.svg' | shopify_asset_url }}" width="120" height="40" alt="Add To Apple Wallet">
        </a>
        {% endif %}
      </div>
    </div>
  </section>

  {% section 'footer' %}
</body>
</html>
